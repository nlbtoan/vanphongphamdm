<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- create jndi template -->
	<bean id="jndiTemplate" class="org.springframework.jndi.JndiTemplate">
		<property name="environment">
			<props>
				<prop key="java.naming.factory.initial">org.jnp.interfaces.NamingContextFactory</prop>
				<!--<prop key="java.naming.provider.url">jnp://localhost:1099</prop>-->
				<prop key="java.naming.factory.url.pkgs">org.jnp.interfaces:org.jboss.naming</prop>
			</props>
		</property>
	</bean>
	<!-- jms topic connection factory -->
	<bean id="jmsTopicConnectionFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiTemplate">
			<ref bean="jndiTemplate" />
		</property>
		<property name="jndiName">
			<value>TopicConnectionFactory</value>
		</property>
	</bean>
	<!-- define jms destination to send the message -->
	<bean id="sendDestination" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiTemplate">
			<ref bean="jndiTemplate" />
		</property>
		<property name="jndiName">
			<value>topic/notiChat</value>
		</property>
	</bean>
	<!-- jms topic template configuration -->
	<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate102">
		<property name="connectionFactory">
			<ref bean="jmsTopicConnectionFactory" />
		</property>
		<property name="defaultDestination">
			<ref bean="sendDestination" />
		</property>
		<property name="pubSubDomain">
			<value>true</value>
		</property>
	</bean>
	<!-- jms sender -->
	<bean id="jmsSender" class="tma.com.vn.chat.server.app.JmsSender">
		<property name="jmsTemplate">
			<ref bean="jmsTemplate" />
		</property>
	</bean>
	<!-- end jms -->

	<!-- hibernate -->
	<!-- session factory -->
	<bean id="userSessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.connection.datasource">java:MySqlDS</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.order_updates">true</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>tma.com.vn.chat.server.app.User</value>
			</list>
		</property>
	</bean>
	<!-- initial music management -->

	<bean id="userDAO" class="tma.com.vn.chat.server.dao.UserDAOImpl">
		<constructor-arg ref="userSessionFactory"/>
	</bean>
	
	<bean id="userManagement" class="tma.com.vn.chat.server.app.UserManagement">
		<constructor-arg ref="userDAO"/>
		<constructor-arg ref="jmsSender"/>
	</bean>
	<!-- jmx -->
	<bean id="mbeanServer" class="org.jboss.mx.util.MBeanServerLocator" factory-method="locateJBoss"/>
	<bean id="exporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="beans">
			<map>
				<entry key="ServerChat:service=UserManagement"
					value-ref="userManagement" />
			</map>
		</property>
		<property name="server" ref="mbeanServer" />
		<property name="assembler">
			<bean class="org.springframework.jmx.export.assembler.InterfaceBasedMBeanInfoAssembler">
				<property name="interfaceMappings">
					<props>
						<prop key="ServerChat:service=UserManagement">
							tma.com.vn.chat.server.api.IUserManagement
						</prop>
					</props>
				</property>
			</bean>
		</property>
	</bean>
</beans>
